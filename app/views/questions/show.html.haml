.container
  %p
    %b Statement:
    = @question.statement
  %p
    %b Answer1:
    = @question.answer1
  %p
    %b Answer2:
    = @question.answer2
  %p
    %b Answer3:
    = @question.answer3
  %p
    %b Correct answer:
    = @question.correct_answer
  %p
    %b Domain:
    = @question.domain

  = link_to 'Edit', edit_question_path(@question), class: 'btn btn-default'

  = link_to 'Back', questions_path, class: 'btn btn-default'
